<!doctype html>
<html>

    <head>
        <!-- Metadados -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
        <!-- CSS -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/partner.css" media="screen">

        <!-- Título da página (aparece na aba) -->
        <title>Cadastro Motorista</title>
    </head>

    <body>  
        <!-- Cabeçalho com título e subtítulo (ambos com css de id "titulo") -->
        <div>
            <h1 id="titulo">Cadastro de Motorista Parceiro</h1>
            <p id="subtitulo">Complete suas informações</p>
            <br>
        </div>

        <!-- Início do formulário -->
        <form>

            <fieldset class="grupo">
                <!-- Campo do nome com legenda "nome" e css de classe "campo" -->
                <div class="campo">
                    <label for="nome"><strong>Nome</strong></label>
                    <input type="text" name="nome" id="nome" required>
                </div>

                <!-- Campo do sobrenome com legenda "sobrenome" e css de classe "campo" -->
                <div class="campo">
                    <label for="sobrenome"><strong>Sobrenome</strong></label>
                    <input type="text" name="sobrenome" id="sobrenome" required>
                </div>
            </fieldset> 

            <!-- Campo de email com-->
            <div class="campo">
                <label for="email"><strong>Email</strong></label>
                <input type="email" name="email" id="email" required>
            </div>

            <!-- Campo de telefone com-->
            <div class="campo">
                <label for="telefone"><strong>Telefone com DDD</strong></label>
                <input type="telefone" name="telefone" id="telefone" required>
            </div>

            
            <!-- Campo de endereço-->
            <div class="campo">
                <label for="endereco"><strong>Endereço</strong></label>
                <input type="endereco" name="endereco" id="endereco" required>
            </div>

            <!-- Campo de Carteira de Motorista-->
            <div class="campo">
                <label for="cnh"><strong>CNH</strong></label>
                <input type="cnh" name="cnh" id="cnh" required>
            </div>

              <!-- Campo de indicação da categoria da CNH com 3 opções para escolha (select option) e css de classe "campo" -->
              <div class="campo">
                <label for="senioridade"><strong>Categoria da CNH</strong></label>
                <select id="senioridade" required>
                  <option selected disabled value="">Selecione</option>
                  <option>Categoria C</option>
                  <option>Categoria D</option>
                  <option>Categoria E</option>
                </select>
            </div>
            
            <!-- Campo de cidade que deseja atuar-->
            <div class="campo">
                <label for="cidade"><strong>Cidade que deseja atuar</strong></label>
                <input type="cidade" name="cidade" id="cidade" required>
            </div>

            <!-- Campo de Codigo de Indicação-->
            <div class="campo">
                <label for="indicacao"><strong>Código de Indicação</strong></label>
                <input type="indicacao" name="indicacao" id="indicacao" required>
            </div>

            <!-- Campo de diponibilidade de horário de atendimento do motorista com 3 opções de botões selecionáveis (radio button) e css de classe "campo" -->
            <div class="campo">
                <label><strong>Disponibilidade de Horário para atendimento</strong></label>
                <label>
                    <input type="radio" name="clock" value="Pela Manhã" checked>Das 00:00 até 06:00
                </label>
                <label>
                    <input type="radio" name="clock" value="Pela Tarde">06:00 até 12:00
                </label>
                <label>
                    <input type="radio" name="clock" value="Pela Noite">18:00 até 00:00
                </label>
                <label>
                    <input type="radio" name="clock" value="Horário Comercial">horario comercial
                </label>
            </div>
            
            <!-- Botão para enviar o formulário -->
            <button class="botao" type="submit" onsubmit="">Concluído</button>            

        </form>

    </body>

</html>

